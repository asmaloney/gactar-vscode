{
  "name": "gactar",
  "displayName": "gactar",
  "description": "Tools for working with gactar",
  "version": "0.1.0",
  "publisher": "asmaloney",
  "author": {
    "name": "Andy Maloney <asmaloney@gmail.com>"
  },
  "license": "MIT",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/asmaloney/gactar-vscode"
  },
  "bugs": {
    "url": "https://github.com/asmaloney/gactar-vscode/issues"
  },
  "homepage": "https://github.com/asmaloney/gactar-vscode/blob/main/README.md",
  "icon": "images/gactar-logo-1024.png",
  "readmeFilename": "README.md",
  "engines": {
    "vscode": "^1.67.0"
  },
  "categories": [
    "Programming Languages",
    "Snippets"
  ],
  "keywords": [
    "amod",
    "gactar",
    "syntax highlight"
  ],
  "activationEvents": [
    "onLanguage:amod"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "gactar",
      "properties": {
        "gactar.installationFolder": {
          "type": "string",
          "default": "",
          "description": "Path to your gactar installation (folder containing the gactar executable).",
          "order": 100
        },
        "gactar.framework": {
          "type": "string",
          "default": "all",
          "enum": [
            "ccm",
            "pyactr",
            "vanilla",
            "all"
          ],
          "description": "Which framework to run (defaults to all available).",
          "order": 150
        },
        "gactar.outputFolder": {
          "type": [
            "string",
            "null"
          ],
          "default": null,
          "description": "Path to store intermediate files when running models. If empty, it will create a folder called 'gactar-temp' next to the amod file.",
          "order": 200
        }
      }
    },
    "commands": [
      {
        "command": "gactar.run.file",
        "title": "gactar: Run Current File",
        "description": "Run the current amod file in gactar."
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "gactar.run.file",
          "when": "editorLangId == amod"
        }
      ]
    },
    "languages": [
      {
        "id": "amod",
        "aliases": [
          "gactar amod",
          "amod"
        ],
        "extensions": [
          ".amod"
        ],
        "configuration": "./languages/amod.language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "amod",
        "scopeName": "source.amod",
        "path": "./syntaxes/amod.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "amod",
        "path": "./snippets/amod.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/vscode": "^1.67.0",
    "@types/node": "^17.0.35",
    "@typescript-eslint/eslint-plugin": "^5.25.0",
    "@typescript-eslint/parser": "^5.25.0",
    "eslint": "^8.15.0",
    "typescript": "^4.6.4"
  }
}
